@using MyProject.Models.siniflar
@model List<myfirstproject.Models.siniflar.Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th> ID </th>
        <th> Ürün </th>
        <th> Marka </th>
        <th> Stok </th>
        <th> Alış Fiyat </th>
        <th> Satış Fiyat </th>
        <th>  Kategori </th>
        <th>  Görsel </th>
        <th> Sil </th>
        <th> Güncelle </th>

    </tr>

    @foreach (var u in Model)
    {
        <tr>
            <td> @u.UrunId</td>
            <td> @u.UrunAd</td>
            <td> @u.Marka</td>
            <td> @u.Stok</td>
            <td> @u.AlisFiyat</td>
            <td> @u.SatisFiyat</td>
            <td> @u.Kategori.KategoriAd</td>
            <td> @u.UrunGorsel</td>
            <td> 
                <a href="/Urun/UrunSil/@u.UrunId" class="btn btn-danger"> Sil </a>
            </td>
            <td>
                <a href="/Urun/UrunGetir/@u.UrunId" class="btn btn-dark"> Güncelle </a>
            </td>
        </tr>
    }
</table>

<a href="/Urun/UrunEkle/" class="btn btn-primary">Yeni Ürün </a>




