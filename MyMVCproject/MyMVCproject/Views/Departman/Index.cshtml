@using MyProject.Models.siniflar
@model List<myfirstproject.Models.siniflar.Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th> Departman id </th>
        <th> Departman Adı </th>
        <th> Sil </th>
        <th> Güncelle </th>
        <th> Detaylar </th>
    </tr>

    @foreach (var k in Model)
    {
        <tr>
            <td>
                @k.DepartmanId
            </td>
            <td>
                @k.DepartmanAd
            </td>
            <td>
                <a href="/Departman/DepartmanSil/@k.DepartmanId" class="btn btn-danger"> Sil </a>
            </td>
            <td>
                <a href="/Departman/DepartmanGetir/@k.DepartmanId" class="btn btn-success"> Güncelle </a>
            </td>
            <td>
                <a href="/Departman/DepartmanDetay/@k.DepartmanId" class="btn btn-default" style="background-color: lightseagreen; color:white"> Detaylar </a>
            </td>
        </tr>
    }

</table>
<a href="/Departman/DepartmanEkle" class="btn btn-info" style="background-color: firebrick"> Yeni Departman  </a>

